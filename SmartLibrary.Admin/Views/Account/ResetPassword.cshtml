@using SmartLibrary.Resources
@using SmartLibrary.Admin.Pages;
@using SmartLibrary.Infrastructure;
@model SmartLibrary.Models.ResetPassword
@{
    Layout = Url.Content("~/Views/Shared/_LoginLayout.cshtml");
    ViewBag.Title = Account.ResetPassword;
}
<div class="vertical-wrapper login-wrapper">
    <div class="vertical-wrapper-inner">
        <div class="form-wrapper">
            <a href="#" class="brand" title="@SmartLibrary.Resources.General.ApplicationName"><img src="@Url.Content("~/Images/logo.png")" alt="@SmartLibrary.Resources.General.ApplicationName" /></a>
            <h3 class="title">@Account.ResetPassword</h3>
            @using (Html.SmartLibSecureForm(SmartLibrary.Admin.Pages.Actions.ResetPassword, SmartLibrary.Admin.Pages.Controllers.Account))
            {
                @Html.HiddenFor(x => x.Id)
                <div class="form-group big-input no-label">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = Account.NewPassword })
                    <div class="form-control-position">
                        <i class="fa fa-key"></i>
                    </div>
                </div>
                <div class="form-group big-input no-label">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = Account.ConfirmPassword })
                    <div class="form-control-position">
                        <i class="fa fa-key"></i>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-block btn-lg">
                    @General.ResetPassword
                </button>
                <div class="card-footer no-border">
                    <p class="float-sm-left text-xs-center"><a href="@Url.Action(SmartLibrary.Admin.Pages.Actions.Index, SmartLibrary.Admin.Pages.Controllers.Account)" class="card-link">@Account.Login</a></p>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
    </script>
}
